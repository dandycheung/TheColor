<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- top level DayNight theme -->
    <style name="Theme.TheColor" parent="Base.Theme.TheColor" />

    <!-- base custom theme to be overridden -->
    <style name="Base.Theme.TheColor" parent="Base.Theme.Material">
        <!-- colors theme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>

        <!-- color on -->
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>

        <!-- colors background -->
        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorError">@color/red_600</item>

        <!-- types -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TheColor.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TheColor.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TheColor.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TheColor.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TheColor.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TheColor.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TheColor.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TheColor.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TheColor.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TheColor.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.TheColor.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TheColor.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.TheColor.Overline</item>

        <!-- shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TheColor.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TheColor.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TheColor.LargeComponent</item>

        <!-- widgets -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Main.BottomSheetDialog</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="android:textViewStyle">@style/Widget.Main.TextView</item>
        <item name="android:editTextStyle">@style/Widget.TheColor.EditText</item>
        <item name="textInputStyle">@style/Widget.TheColor.TextInputLayout</item>
    </style>

    <style name="Base.Theme.Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

</resources>