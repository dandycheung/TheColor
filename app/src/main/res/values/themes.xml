<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- top level DayNight theme -->
    <style name="Theme.TheColor" parent="Base.Theme.TheColor" />

    <!-- base custom theme to be overridden -->
    <style name="Base.Theme.TheColor" parent="Base.Theme.Material">

        <!-- colors theme -->
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryInverse">?attr/colorDebug</item>
        <item name="colorSecondary">@color/coral</item>
        <item name="colorTertiary">?attr/colorDebug</item>
        <item name="colorSurface">@color/magnolia</item>
        <item name="colorOutline">@color/m3_sys_color_light_outline</item>
        <item name="colorError">@color/crimson</item>

        <item name="colorDebug">#FF0000</item>
        <item name="colorToolsBackground">#F0F0F0</item>

        <!-- color on -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSecondaryContainer">?attr/colorOnSecondary</item>
        <item name="colorOnTertiary">?attr/colorDebug</item>
        <item name="colorOnTertiaryContainer">?attr/colorDebug</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/cod_gray</item>
        <item name="colorOnSurfaceInverse">@color/white</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">?attr/colorDebug</item>

        <!-- color container -->
        <item name="colorPrimaryContainer">@color/violet</item>
        <item name="colorSecondaryContainer">?attr/colorSecondary</item>
        <item name="colorTertiaryContainer">?attr/colorTertiary</item>
        <item name="colorErrorContainer">?attr/colorError</item>

        <!-- colors background -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorBackgroundFloating">@color/white</item>

        <!-- types -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.TheColor.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.TheColor.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.TheColor.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.TheColor.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.TheColor.HeadlineMedium
        </item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.TheColor.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.TheColor.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.TheColor.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.TheColor.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.TheColor.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.TheColor.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.TheColor.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.TheColor.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.TheColor.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.TheColor.LabelSmall</item>

        <item name="textAppearanceOverline">@style/TextAppearance.TheColor.Overline</item>

        <!-- shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TheColor.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TheColor.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TheColor.LargeComponent
        </item>

        <!-- widgets -->
        <item name="android:editTextStyle">@style/Widget.TheColor.EditText</item>
        <item name="android:scrollViewStyle">@style/Widget.TheColor.ScrollView</item>
        <item name="android:textViewStyle">@style/Widget.TheColor.TextView</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.TheColor.MaterialAlertDialog
        </item>
        <item name="materialButtonStyle">@style/Widget.TheColor.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.TheColor.Button.Outlined</item>
        <item name="materialButtonTonalStyle">@style/Widget.TheColor.Button.Tonal</item>
        <item name="materialDividerStyle">@style/Widget.TheColor.MaterialDivider</item>

        <item name="appBarLayoutStyle">@style/Widget.TheColor.AppBarLayout</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.TheColor.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.TheColor.BottomSheet.Modal</item>
        <item name="chipStyle">@style/Widget.TheColor.Chip</item>
        <item name="chipGroupStyle">@style/Widget.TheColor.ChipGroup</item>
        <item name="textInputStyle">@style/Widget.TheColor.TextInputLayout</item>
        <item name="toolbarStyle">@style/Widget.TheColor.Toolbar</item>
    </style>

    <style name="Base.Theme.Material" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">?attr/isLightTheme
        </item>
    </style>

</resources>