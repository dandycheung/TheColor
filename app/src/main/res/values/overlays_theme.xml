<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Theme overlay styles, used in application themes attributes.
        Preserve alphabetical order.
    -->

    <!-- region View Group overlays -->

    <!-- Light background color -->
    <style name="ThemeOverlay.TheColor.Light" parent="">
        <item name="colorControlHighlight">@color/gainsboro</item>
    </style>

    <!-- Dark background color -->
    <style name="ThemeOverlay.TheColor.Dark" parent="">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorControlHighlight">@color/silver</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorBackground">@color/cod_gray</item>
    </style>

    <!-- endregion -->

    <style name="ThemeOverlay.TheColor.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- nothing special here -->
    </style>

    <style name="ThemeOverlay.TheColor.BottomSheetDialog" parent="ThemeOverlay.Material3.DayNight.BottomSheetDialog">
        <!--
        Material3 tints all dialogs with translucent colorPrimary on top of colorSurface.
        You should define android:background attribute of root view of your dialog layout in order
        to change it visually.
        If you know, how to do it properly, in themes, feel free to contribute.
         -->
        <item name="bottomSheetStyle">@style/Widget.TheColor.BottomSheet.Modal</item>
    </style>

</resources>