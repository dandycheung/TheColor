<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TextView -->
    <style name="Widget.Main.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TextView.ColorValue" parent="">
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- TabLayout -->
    <style name="Widget.Main.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.TabLayout</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.Main.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Main.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.Main.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Widget.Main.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.TheColor.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputEditTextMaterialThemeOverlay</item>
    </style>

    <style name="Widget.TheColor.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TextInputEditTextMaterialThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- https://stackoverflow.com/a/60178370/11672687 -->
        <item name="editTextStyle">@style/TextInputEditText</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
    </style>

</resources>