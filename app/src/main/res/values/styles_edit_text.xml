<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.TextInputLayoutHint</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.TextInputLayoutPlaceholder</item>
        <item name="placeholderTextColor">@null</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_radius</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>

        <item name="android:paddingStart">@dimen/input_offset_horizontal</item>
        <item name="android:paddingEnd">@dimen/input_offset_horizontal</item>
    </style>

</resources>