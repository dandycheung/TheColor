<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputEditTextMaterialThemeOverlay</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextInputLayoutHint</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.TextInputLayoutPlaceholder
        </item>
        <item name="placeholderTextColor">@null</item>
    </style>

    <style name="TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/TextAppearance.TextInputLayoutHint</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.TextInputLayoutPlaceholder
        </item>
        <item name="placeholderTextColor">@null</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TextInputEditTextMaterialThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- https://stackoverflow.com/a/60178370/11672687 -->
        <item name="editTextStyle">@style/TextInputEditText</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
    </style>

</resources>