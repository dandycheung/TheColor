<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/btn_inset_horizontal"
    android:insetTop="@dimen/btn_inset_vertical"
    android:insetRight="@dimen/btn_inset_horizontal"
    android:insetBottom="@dimen/btn_inset_vertical">

    <ripple android:color="?android:attr/colorControlHighlight">
        <item
            android:id="@android:id/mask"
            android:drawable="@drawable/ripple_mask_rounded" />
        <item>

            <shape android:shape="rectangle">
                <solid android:color="@color/selector_btn_primary" />
                <corners android:radius="@dimen/btn_roundness" />
                <padding
                    android:bottom="@dimen/btn_primary_padding_vertical"
                    android:left="@dimen/btn_primary_padding_horizontal"
                    android:right="@dimen/btn_primary_padding_horizontal"
                    android:top="@dimen/btn_primary_padding_vertical" />
            </shape>

        </item>
    </ripple>

</inset>