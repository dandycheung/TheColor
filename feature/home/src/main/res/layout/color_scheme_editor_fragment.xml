<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#0047AB"
    tools:context=".ui.fragment.color.data.scheme.editor.ColorSchemeEditorFragment"
    tools:theme="@style/ThemeOverlay.TheColor.Dark">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/schemeFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/color_scheme_fragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/configFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offset_content_horizontal"
        android:layout_marginTop="@dimen/offset_16"
        tools:layout="@layout/color_scheme_config_fragment" />

    <Button
        android:id="@+id/dispatchChangesBtn"
        style="@style/Widget.Button.Text.OnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/offset_content_horizontal"
        android:text="@string/color_scheme_editor_dispatch_changes_btn"
        android:visibility="invisible"
        tools:visibility="visible" />

</androidx.appcompat.widget.LinearLayoutCompat>