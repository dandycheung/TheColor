<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/colorSchemeFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/color_scheme_fragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/colorSchemeSettingsFragmnetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/color_scheme_config_fragment" />

    <Button
        android:id="@+id/fetchColorSchemeBtn"
        style="@style/Widget.Button.Tonal.SurfaceVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/color_scheme_configure_fetch_btn" />

</androidx.appcompat.widget.LinearLayoutCompat>