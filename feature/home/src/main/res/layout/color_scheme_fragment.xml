<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#0047AB"
    tools:context="com.ordolabs.feature_home.ui.fragment.colordata.scheme.ColorSchemeFragment"
    tools:theme="@style/ThemeOverlay.TheColor.Dark">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/offset_content_horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/offset_content_horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/samples"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/glEnd"
        app:layout_constraintStart_toEndOf="@id/glStart"
        app:layout_constraintTop_toTopOf="parent"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/color_scheme_sample_item"
        tools:orientation="horizontal" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/modeChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_16"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/offset_content_horizontal"
        app:layout_constraintTop_toBottomOf="@id/samples">

        <!-- chips are added dynamically -->

        <!-- preview chip -->
<!--        <include layout="@layout/color_scheme_mode_chip"/>-->

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>