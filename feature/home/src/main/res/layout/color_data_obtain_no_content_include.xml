<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingVertical="@dimen/offset_content_default">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_data_no_content_message"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/material_on_background_emphasis_medium" />

    <Button
        android:id="@+id/retryBtn"
        style="@style/Widget.Button.Tonal.SurfaceVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_16"
        android:text="@string/color_data_no_content_button" />

</androidx.appcompat.widget.LinearLayoutCompat>